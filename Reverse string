#include <iostream>
#include <cstring>   // for strlen
using namespace std;

int main() {
    char str[100];
    cout << "Enter a string: ";
    cin >> str;

    char *start = str;                   
    char *end = str + strlen(str) - 1; 

    while (start < end) {
        char p = *start;
        *start = *end;
        *end = p;

        start++;
        end--;
    }

    cout << "Reversed string = " << str;
    return 0;
}

//output
Enter a string: hello
Reversed string = olleh
